// -*- mode: jsonc -*-
{
    "layer": "top",
    "height": 20,
    "spacing": 4, // Gaps between modules (4px)
    "reload_style_on_change": true,
    "fixed-center": true,
    "modules-left": [
        "hyprland/workspaces",
        "custom/fullscreen",
        "hyprland/window"
        // "niri/workspaces",
        // "niri/window",
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "mpris",
        "memory",
        "cpu",
        "wireplumber#sink",
        "wireplumber#source",
        "hyprland/language",
        
        // "niri/language",
        // "power-profiles-daemon",
        // "battery",

        "tray"
    ],
    
    // Modules configuration
    "custom/fullscreen": {
        "exec": "~/code/dots/global/dotscripts/fullscreencheck.sh",
        "signal": 8,
    },
    "hyprland/window": {
       "icon": false,
       "icon-size": 20,
       "format": "{title}",
       "tooltip": false,
    },
    "niri/window": {
       "format": "{title}",
       "tooltip": false,
    },
    "hyprland/language": {
       "format-en": "en",
       "format-ru": "ru",
    }, 
    "niri/language": {
       "format-en": "en",
       "format-ru": "ru",
    }, 
    "tray": {
        "spacing": 10
    },
    "clock": {
        "locale": "en_GB.UTF-8",
        "format": "[ {:%H:%M @ %d %b, %Y} ]",
        "interval": 1, 
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
          "mode"          : "month",
          "mode-mon-col"  : 3,
          "weeks-pos"     : "right",
          "on-scroll"     : 1,
          "on-click-right": "mode",
             "format": {
             "months":     "<span color='#cdd6f4'><b>{}</b></span>",
             "days":       "<span color='#cdd6f4'><b>{}</b></span>",
             "weeks":      "<span color='#a6e3a1'><b>W{}</b></span>",
             "weekdays":   "<span color='#f38ba8'><b>{}</b></span>",
             "today":      "<span color='#f2cdcd'><b><u>{}</u></b></span>"
		    }
	     },
        "format-alt": "[ {:%d.%m.%Y} ]",
        "actions": {
		      "on-click-right": "mode",
		      "on-click-forward": "tz_up",
		      "on-click-backward": "tz_down",
		      "on-scroll-up": "shift_up",
		      "on-scroll-down": "shift_down"
	     },
    },
    "memory": {
        "format": "{used} GiB/{total} GiB",
        "tooltip": false,
        "interval": 5
    },
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}%+ 󱐥",
        "format-charging": "{capacity}% 󱐥",
        "format-plugged": "{capacity}% 󱐥",
        "format-alt": "{time} {icon}",
        "format-icons": [" ", " ", " ", " ", " "],
        "interval": 5,
    },
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}",
      "tooltip": true,
      "format-icons": {
        "default": "󰓅",
        "performance": "󰓅",
        "balanced": "󰾅",
        "power-saver": "󰾆"
      }
    },
    "cpu": {
	     "interval": 3,
	     "format": " {usage:}%",
    },
    "wireplumber#sink": {
       "format": "󰋎 {volume}%",
       "format-muted": " {volume}%",
       "tooltip-format": "{node_name}",
       "scroll-step": 5,
       "on-click": "pavucontrol --tab 3",
       "on-click-right": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
    },
    "wireplumber#source": {
       "node-type": "Audio/Source",
       "format": "",
       "format-muted": "󰍭",
       "tooltip-format": "{node_name} - {volume}%",
       "scroll-step": 5,
       "on-click": "pavucontrol --tab 4",
       "on-click-right": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle",
    },
    "mpris": {
        "format": "{dynamic}",
        "dynamic-order": ["artist", "title"],
        "player": "naviterm",
        "dynamic-len": 35,
        "title-len": 35,
        "artist-len": 30,
    }
}
}
}
